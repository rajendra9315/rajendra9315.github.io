  </div>  <!-- Lightbox modal -->  <div id="lightbox" style="display:none;position:fixed;inset:0;background:rgba(0,0,0,0.8);align-items:center;justify-content:center;padding:20px">
    <img id="lightbox-img" src="" style="max-width:96%;max-height:96%;border-radius:10px">
  </div>  <script>
    // Carousel basic logic
    (function(){
      const slides = document.getElementById('slides1');
      const total = slides.children.length;
      let idx = 0;
      let playing = true;
      function update(){ slides.style.transform = `translateX(-${idx*100}%)`; }
      function next(){ idx = (idx+1) % total; update(); }
      function prev(){ idx = (idx-1+total) % total; update(); }
      let timer = setInterval(next, 3500);
      document.querySelector('#carousel1 .control[data-action="next"]').addEventListener('click',()=>{ next(); resetTimer();});
      document.querySelector('#carousel1 .control[data-action="prev"]').addEventListener('click',()=>{ prev(); resetTimer();});
      function resetTimer(){ clearInterval(timer); timer = setInterval(next,3500); }
      // pause on hover
      document.getElementById('carousel1').addEventListener('mouseenter', ()=>{ clearInterval(timer); });
      document.getElementById('carousel1').addEventListener('mouseleave', ()=>{ resetTimer(); });
    })();

    function ctaPrimary(){ alert('Primary CTA clicked â€” link to signup or modal'); }
    function ctaSecondary(){ window.scrollTo({top: document.querySelector('.video-card').offsetTop - 60, behavior:'smooth'}); }

    // Lightbox
    function openLightbox(img){ const lb = document.getElementById('lightbox'); document.getElementById('lightbox-img').src = img.src; lb.style.display = 'flex'; }
    document.getElementById('lightbox').addEventListener('click', ()=>{ document.getElementById('lightbox').style.display='none'; });

    // Accessibility: enable keyboard carousel arrows
    document.addEventListener('keydown', (e)=>{
      if(e.key === 'ArrowLeft') document.querySelector('#carousel1 .control[data-action="prev"]').click();
      if(e.key === 'ArrowRight') document.querySelector('#carousel1 .control[data-action="next"]').click();
    });
  </script></body>
